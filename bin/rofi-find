#!/usr/bin/env bash
#
# Global variables:
# Show list of options

function main(){
    precheck "locate"
    precheck "rofi"

    local choice=$(echo " " | rofi -location 2 -font "Noto Sans 8" -dmenu -lines 1 -line-margin 0 -line-padding 1 -i -p "Filename: ")
    
    if [ ! -z "$choice" ]; then
        find . -maxdepth 2 -type f -print | grep "$choice"
        if [ $? -ne 0 ]; then
            locate "$choice"
        fi
    fi
    exit 0
}

main "$@"