#!/bin/sh

cmd=$(printf "poweroff\nreboot\nsuspend\nlock\nkillX\n" | dmenu -l 10 -p "Execute:" $*)

if [ -z "$cmd" ]; then
    exit 0
fi

case "$cmd" in
    poweroff)
        systemctl poweroff ;;
    reboot)
        systemctl reboot ;;
    suspend)
        systemctl suspend ;;
    lock)
        cinnamon-screensaver-command -l ;;
    killX)
        killall X ;;
    *)
        printf "Option not recognized: %s\n" "$cmd" >&2
esac