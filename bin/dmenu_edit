#!/usr/bin/env bash
#
# d-edit: Use dmenu to open and edit a file from a given list.

# Global variables:
FILES=${1:-"~/bin"}
DMENU='dmenu -l -i'
EDITOR='myedit'
# Show list of options
choice=$(cd "$FILES"; find . -maxdepth 1 -type f -print | sort | dmenu -l -i -p "File to edit:")

if [ ! -z "$choice" ]; then
    $EDITOR "${FILES}"/${choice}
fi

