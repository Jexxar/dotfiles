#!/bin/bash
function qt_m()
{
    local f="/var/mail/$USER"
    if [ -e $f ]; then    
        awk '/From:/{print $0}' $f | grep -c "From:"
    else
        echo "0"
    fi
}

# Exite msg de e-mails pendentes
function t_m()
{
    if [ $# -ne 0 ]; then
        local OPTS=`getopt -o q --long verbose,dry-run,help,stack-size: -n 'parse-options' -- "$@"`
        local quiet=`echo "${OPTS}" | sed 's/--//g'`
    else
        local quiet=""
    fi
    local qm="$(qt_m)"
    qm="${qm}"
    if  [[ $qm -gt 0 ]]; then
        echo "Voce tem $qm novo(s) e-mail(s)!"
    else
        if [ -z "$quiet" ]; then
            echo "Todos os e-mails foram lidos"
        fi
    fi
}
t_m $@