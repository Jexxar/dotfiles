#!/usr/bin/env bash
# This script is intended to be run as an editor helper.

if [ -f "$HOME/bin/mycommon" ]; then
    . "$HOME/bin/mycommon"
fi

function _fX(){
    # list by priority from the left to the right
    local Xl=('subl' 'subl3' 'subl4' 'sublime-text' 'geany' 'xed' 'gedit' 'pluma' 'kate' 'kwrite' 'medit' 'leafpad' 'atom' 'vscode' 'eclipse' 'brackets' 'gvim')
    local r=""
    for i in "${Xl[@]}"; do
        r=$(command -v "${i}")
        [ -n "$r" ] && echo "$r" && return 0
    done
    [ $(hash xdg-open) ] && echo "$(command -v xdg-open)" && return 0
    echo ""
    return 1
}

function _fnoX(){
    # list by priority from the left to the right
    local noXl=('micro' 'nano' 'pico' 'jed' 'joe' 'mcedit' 'vim' 'neovim' 'vi' 'kakoune' 'emacs')
    local r=""
    for i in "${noXl[@]}"; do
        r=$(command -v "${i}")
        [ -n "$r" ] && echo "$r" && return 0
    done
    echo ""
    return 1
}

function main() {
    [ -z "$1" ] && log "No target informed" && return 1
    local edt=""
    if is_running_X ; then
        if [ "$2" = "cli" ]; then
            edt="$(_fnoX)"
            if [ -n "$edt" ]; then
                x-terminal-emulator -e $edt "$1" &
                disown
                return 0
            fi
        fi
        edt="$(_fX)"
        if [ -n "$edt" ]; then
            $edt "$1" &
            disown
            return 0
        fi
    else
        edt=$(_fnoX)
        if [ -n "$edt" ]; then
            $edt "$1"
            return 0
        fi
    fi
    [ -z "$edt" ] && log "no editors found"
    return 0
}

main "$@"
