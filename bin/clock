#!/usr/bin/env bash

# A simple script to display clock
# 'clock -i' = with icon, 'clock' = text only
# Cheers!
# Addy

#US clock style
#CLOCK=$(env LC_ALL=en_US.utf8 LC_TIME=en_US.utf8 date +"%a %m/%d/%Y %H:%M")

#European style
CLOCK=$(date +"%a %d/%m/%Y %H:%M")

if  [[ $1 = "-i" ]]; then
    echo "ï€—  ${CLOCK}"
else
    echo "${CLOCK}"
fi
