#!/usr/bin/env bash
#==============================================
# Show a message of the day quotation(via fortune)
#==============================================
function do_motd() {
    local __fortune
    __fortune="$(which fortune 2> /dev/null)"
    [ -f ~/.plan ] && rm -f ~/.plan &>/dev/null
    [ -z "$__fortune" ] && exit 0

    ${__fortune} -a > ~/.plan
    while [ $(wc -l < ~/.plan) -ge 3 ]
    do
      [ -f ~/.plan ] && rm -f ~/.plan &>/dev/null
      ${__fortune} -a > ~/.plan
    done
    #cat ~/.plan | sed -e 's/^[ \t]*//' | awk '{$1=$1}1' | cowsay -f $(random_cow_file)
    cat ~/.plan | sed -e 's/^[ \t]*//' | awk '{$1=$1}1'
}

do_motd
